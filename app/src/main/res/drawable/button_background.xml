<!-- res/drawable/button_solid_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outline and solid layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <solid android:color="#FFFFFF"/> <!-- Button color -->
            <stroke
                android:width="2dp"
                android:color="#81D4FA"/> <!-- Outline color -->
        </shape>
    </item>
</layer-list>
